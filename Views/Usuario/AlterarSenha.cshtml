@model LocFarma.Models.Usuario

@{
    ViewData["Title"] = "Alterar Senha";
    var msgAlterarSenha = ViewBag.MsgAlterarSenha;
}

<div class="mt-4">
    <div class="row">
        <partial name="_MenuLateralPartial" />

        <!-- Alterar Senha -->
        <div class="col-lg-9">
            <div class="row">
                <div class="col-md-4">
                    <form asp-controller="Usuario" asp-action="AlterarSenha">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <hidden asp-for="Id"></hidden>
                        <div class="form-group">
                            <label asp-for="SenhaAtual" class="control-label"></label>
                            <input type="password" asp-for="SenhaAtual" class="form-control" />
                            <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NovaSenha" class="control-label"></label>
                            <input type="password" asp-for="NovaSenha" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                   title="Deve conter pelo menos um número e uma letra maiúscula e minúscula e pelo menos 8 ou mais caracteres" />
                            <span asp-validation-for="NovaSenha" class="text-danger"></span>
                        </div>
                        @if (msgAlterarSenha == "sucesso")
                        {
                            <div class="mt-2 p-2 bg-success text-white">
                                <label class="control-label">Alterado a senha com sucesso!</label>
                            </div>
                        }
                        else if (msgAlterarSenha == "erro")
                        {
                            <div class="mt-2 p-2 bg-danger text-white">
                                <label class="control-label">Senha inválida!</label>
                            </div>
                        }
                        <div class="form-group" style="margin: 10px 0;">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>