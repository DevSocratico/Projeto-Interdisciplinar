@using LocFarma.Repositories.ADO.SQLServer
@inject IHttpContextAccessor context

<ul class="navbar-nav">
    @{
        var idUsuario = context.HttpContext.Session.GetInt32("IdUsuario") ?? 0;

        if (UsuarioDAO.IsLogado(idUsuario))
        {
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" action="/Usuario/Logout" method="post">
                    <input type="hidden" id="idUsuario" name="idUsuario" value=@idUsuario />
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Sair</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Entrar</a>
            </li>
        }
    }
</ul>