@using LocFarma.Repositories.ADO.SQLServer
@inject IHttpContextAccessor context

@{
    var pesquisa = Context.Request.Query["pesquisa"];
    var logContatoErro = context.HttpContext.Session.GetString("LogContatoErro");
    var loginErro = context.HttpContext.Session.GetString("LoginErro");
    var cadastroContaPessoalErro = context.HttpContext.Session.GetString("CadastroContaPessoalErro");
    var cadastroFarmaciaErro = context.HttpContext.Session.GetString("CadastroFarmaciaErro");
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocFarma</title>
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LocFarma.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Menu -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light menu">
            <a class="navbar-brand d-none d-md-block d-lg-block ms-2" asp-controller="Home" asp-action="Index">
                <img src="~/imgs/logotipo.png" alt="Logotipo">
            </a>
            <a class="navbar-brand d-md-none d-lg-none ms-2" asp-controller="Home" asp-action="Index">
                <img src="~/imgs/logo-mobile.png" alt="Logo Mobile">
            </a>
            <form class="d-flex justify-content-center w-50" method="GET" action="/Produto/Produtos">
                <input class="form-control me-2 w-50" type="search" name="pesquisa" placeholder="Pesquisar produtos" aria-label="Search" value="@pesquisa")>
                <button class="btn btn-primary" type="submit">Pesquisar</button>
            </form>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a id="inicio" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                    </li>
                    <li class="nav-item">
                        <a id="sobre" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre Nós</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#" data-bs-toggle="modal" data-bs-target="#contatoModal">Contato</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
                <div class="form-check form-switch ms-2">
                    <input class="form-check-input" type="checkbox" id="modo-noturno">
                </div>
            </div>
            @{
                var idUsuario = context.HttpContext.Session.GetInt32("IdUsuario") ?? 0;
                var idTipoUsuario = context.HttpContext.Session.GetInt32("IdTipoUsuario") ?? 0;

                if (idUsuario != 0)
                {
                    if (idTipoUsuario == 3)
                    {
                                    <a class="nav-link text-dark" asp-controller="Farmacia" asp-action="Perfil" asp-route-id=@idUsuario>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                        </svg>
                                    </a>
                    }
                    else
                    {
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Perfil" asp-route-id=@idUsuario>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                        </svg>
                                    </a>
                    }
                }
            }
        </nav>
    </header>

    <!-- Carousel -->
    <div id="carouselIndicators" class="carousel slide d-none" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/imgs/carousel/mombora.jfif" class="d-block w-100" alt="Produto 1">
            </div>
            <div class="carousel-item">
                <img src="~/imgs/carousel/saude_para_todos.jfif" class="d-block w-100" alt="Produto 2">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Próximo</span>
        </a>
    </div>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="text-center py-4 mt-5">
        <!-- Footer Desktop -->
        <div class="container d-none d-md-block d-lg-block">
            <div class="row">
                <div class="col-sm-6">
                    <h5>Contato:</h5>
                </div>
                <div class="col-sm-6">
                    <h5>Redes Sociais:</h5>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-6">
                    <a href="mailto:contato@locfarma.com" class="mx-2">contato@locfarma.com</a>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary cor-facebook-icone" href="#!" role="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
