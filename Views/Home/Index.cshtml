@model IEnumerable<LocFarma.Models.Produto>

@{
    ViewData["Title"] = "Início";
}

<!-- Destaques -->
<div class="container-fluid mt-4">
    <div class="row">
        <h2>Destaques</h2>
    </div>
    <div class="row">
        @foreach (var produto in Model)
        {
            <div class="col-sm-3">
                <div class="card my-3">
                    <img src="imgs/produtos/@produto.NomeFoto" alt="@produto.Nome">
                    <div class="card-body">
                        <h5 class="card-title">@produto.Nome</h5>
                        <p class="card-text">R$ @produto.Preco</p>
                        <a class="btn btn-primary" asp-controller="Produto" asp-action="Produto" asp-route-id="@produto.Id">Ver Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>